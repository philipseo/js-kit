{
  "name": "@philipseo/scripts",
  "version": "0.0.0",
  "license": "MIT",
  "author": "Philip Seo <hbnb7894@gmail.com>",
  "homepage": "https://github.com/philipseo/js-kit",
  "repository": {
    "type": "git",
    "url": "https://github.com/philipseo/js-kit",
    "directory": "scripts"
  },
  "engins": {
    "node": "20.x",
    "pnpm": "8.x"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "create-github-release": "dist/create-github-release/create-github-release.bin.js",
    "versioning": "dist/versioning/versioning.bin.js"
  },
  "scripts": {
    "build": "tsup",
    "eslint": "eslint . --ignore-path ../../.eslintignore",
    "eslint:fix": "eslint . --fix --ignore-path ../../.eslintignore",
    "prettier": "prettier . --ignore-path ../../.prettierignore --check",
    "prettier:fix": "prettier . --write --ignore-path ../../.prettierignore",
    "lint": "eslint && pnpm prettier",
    "lint:fix": "eslint:fix && pnpm prettier:fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "release": "pnpm build && pnpm publish --no-git-checks --access public"
  },
  "dependencies": {
    "@octokit/rest": "20.0.2"
  },
  "devDependencies": {
    "@philipseo/configs": "workspace:*",
    "@types/jest": "29.5.11",
    "@types/node": "20.11.5",
    "eslint": "8.56.0",
    "jest": "29.7.0",
    "msw": "2.1.2",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "tsup": "^8.0.1"
  }
}
